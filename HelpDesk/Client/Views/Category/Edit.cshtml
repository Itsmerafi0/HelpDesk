@model Client.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<link rel="stylesheet" href="~/css/data.css" asp-append-version="true" />

<div class="container">
    <div class="text">
        Edit Category
    </div>
    <form action="Edit" method="post">
        <div class="form-row">
            <div class="input-data" hidden>
                <input asp-for="Guid" type="text" required>
                <div class="underline"></div>
                <label for="">Guid</label>
            </div>
            <div class="input-data">
                <input asp-for="CategoryName" type="text" required>
                <div class="underline"></div>
                <label for="">Name</label>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data textarea">

                <div class="form-row submit-btn">
                    <div class="input-data">
                        <div class="inner"></div>
                        <input type="submit" value="Create">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
