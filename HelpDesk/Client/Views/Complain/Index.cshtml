@model IEnumerable<Client.Models.Complain>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />

<h1>Index</h1>

<p>
    <a asp-action="Creates">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>@Html.DisplayNameFor(model => model.SubCategoryGuid)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Attachment)</th>
            <th>@Html.DisplayNameFor(model => model.EmployeeGuid)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.ModifiedDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var (index, item) in Model.Select((value, i) => (i, value))){
        <tr>
            <td>@(index + 1)</td>
            <td>@Html.DisplayFor(modelItem => item.SubCategoryGuid)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (item.Attachment != null)
                    {
                        <a href="data:image/jpg;base64,@Convert.ToBase64String(item.Attachment)" download="Image.jpg">
                            <img src="data:image/jpg;base64,@Convert.ToBase64String(item.Attachment)" width="100px" alt="Image" />
                        </a>
                    }
                </td>
            <td>@Html.DisplayFor(modelItem => item.EmployeeGuid)</td>
            <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
            <td>@Html.DisplayFor(modelItem => item.ModifiedDate)</td>
            <td>
                @Html.ActionLink("GetAllComplainDetails", "GetAllComplainDetails", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Deletes", "Deletes", new {item.Guid/* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    var image = new Image();
    image.src = 'data:image/jpeg;base64,' + base64ImageData;
    image.width = '100px';
    image.alt = 'Image';

    document.body.appendChild(image);
</script>


