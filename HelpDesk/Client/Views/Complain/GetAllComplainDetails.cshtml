@model IEnumerable<Client.ViewModels.ComplainDetailVM>

@{
    ViewData["Title"] = "GetAllComplainDetails";
}
<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />

<h1>GetAllComplainDetails</h1>

<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>@Html.DisplayNameFor(model => model.Guid)</th>
            <th>@Html.DisplayNameFor(model => model.Requester)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.SubCategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.RiskLevel)</th>
            <th>@Html.DisplayNameFor(model => model.StatusLevel)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.ResolutionNote)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var (index, item) in Model.Select((value, i) => (i + 1, value))){
        <tr>
            <td>@(index + 1)</td>
            <td>@Html.DisplayFor(modelItem => item.Guid)</td>
            <td>@Html.DisplayFor(modelItem => item.Requester)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
            <td>@Html.DisplayFor(modelItem => item.SubCategoryName)</td>
            <td>@Html.DisplayFor(modelItem => item.RiskLevel)</td>
            <td>@Html.DisplayFor(modelItem => item.StatusLevel)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.ResolutionNote)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) 
            </td>
        </tr>
    }
    </tbody>
</table>

