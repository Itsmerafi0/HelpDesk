			<div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8 d-flex align-items-strech">
                        <div class="card w-100">
                            <div class="card-body">
                                <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                                    <div class="mb-3 mb-sm-0">
                                        <h5 class="card-title fw-semibold">Sales Overview</h5>
                                    </div>
                                    <div>
                                        <select class="form-select">
                                            <option value="1">March 2023</option>
                                            <option value="2">April 2023</option>
                                            <option value="3">May 2023</option>
                                            <option value="4">June 2023</option>
                                        </select>
                                    </div>
                                </div>
                                <div id="chart"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 d-flex fs-5">
                        <div class="card w-100">
                            <div class="card-body p-4">
                                <h5 class="card-title fw-semibold mb-4">COMPLAINS TABLE</h5>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover text-nowrap mb-0 align-middle">
                                        <thead class="text-dark fs-4">
                                            <tr>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        No
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.Guid)
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.SubCategoryGuid)
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.Description)
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.Attachment)
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.EmployeeGuid)
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.EmployeeGuid)
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.CreatedDate)
                                                    </h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">
                                                        @Html.DisplayNameFor(model => model.ModifiedDate)
                                                    </h6>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var (index, item) in Model.Select((value, i) => (i, value)))
                                            {
                                                <tr>
                                                    <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@(index + 1)</h6></td>
                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.Guid)</h6>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.SubCategoryGuid)</h6>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-1">
                                                            @Html.DisplayFor(modelItem => item.Description)
                                                        </h6>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0 fs-4">
                                                            @Html.DisplayFor(modelItem => item.Description)
                                                        </h6>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        @if (item.Attachment != null)
                                                        {

                                                            <a href="data:image/jpg;base64,@Convert.ToBase64String(item.Attachment)" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                                <img src="data:image/jpg;base64, @Convert.ToBase64String(item.Attachment)" width="100px" alt="Image" />
                                                            </a>

                                                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                        </div>
                                                                        <div class="modal-body justify-items-center align-items-center">
                                                                            <img src="data:image/jpg;base64, @Convert.ToBase64String(item.Attachment)" width="100px" alt="Image" />
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                            <button type="button" class="btn btn-primary">Save changes</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0 fs-4">
                                                            @Html.DisplayFor(modelItem => item.EmployeeGuid)
                                                        </h6>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0 fs-4">
                                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                                        </h6>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0 fs-4">
                                                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                                                        </h6>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebarmenu.js" asp-append-version="true"></script>
    <script src="~/js/app.min.js" asp-append-version="true"></script>
    <script src="~/js/apexcharts.min.js" asp-append-version="true"></script>
    <script src="~/js/simplebar.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
</body>
</html>

